@model Post;
@{
    Layout = "MyLayout";
    ViewData["Title"] = "New Post";
}

<div class="new-post">
    <h2> Create a new post</h2>
    @using (Html.BeginForm(actionName: "New", controllerName: "Post", method: FormMethod.Post))
    {
        @Html.Label("Title", "Title")
        <br/>
        @Html.EditorFor(p => p.Title)
        <br/>
        @Html.ValidationMessageFor(p => p.Title, null)
        <br/>

        @Html.Label("Content", "Content")
        <br>
        @Html.EditorFor(p => p.Content)
        <br/>
        @Html.ValidationMessageFor(p => p.Content, null)
        <br/>
        <button type="submit">New Post</button>
    }
</div>