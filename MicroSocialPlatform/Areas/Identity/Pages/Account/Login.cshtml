@page
@model LoginModel

<head>
    <link rel="stylesheet" type="text/css" href="/css/Login.css">
</head>

<h1>@ViewData["Title"]</h1>
<div class="container">
    <div class="drop">
        <div class="content">
            <form id="account" method="post">
                <h2>Login</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="inputBox">
                    <input asp-for="Input.Email"  placeholder="Email"  autocomplete="email" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="inputBox">
                    <input asp-for="Input.Password" placeholder="Password" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                
                <div class="checkbox">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </div>
                
                <div id="lll" class="inputBox">
                    <input id="login-submit" type="submit" value="Login">
                </div>

                
                    
                <a id="forgot-password" class="btns" asp-page="./ForgotPassword">Forgot your password?</a>
                <a class="btns register" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                <a class="btns resend" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                <a class="btns home" asp-page="./Home">Home</a>
                 
               
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

